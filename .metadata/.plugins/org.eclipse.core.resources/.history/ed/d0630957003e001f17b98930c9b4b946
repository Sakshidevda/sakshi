package String;

public class Stringjava {

	public static void main(String[] args) {
		

		
     String s = "sakshi"; // Literal
		
		System.out.println(s);
		
		
		String kk = new String("Sagar");// by using new keyword
		
		//string are immutable in java
		// heap area --- sare object bante h is memory ke ander
		//string constant pool --- jo bhi string literal ke through banti h vo jaaker save haijaati hai
		//
		
		s = s+ "Devda";
		System.out.println(s);
		
		String a = "Rakesh";
		
		String b = "Rakesh"; // yha per koi naya b ke liye rakesh nahi banayega
		//phele vale ka refernce de dega
		// ab life me khabhi rakesh change nhi ho sakta
		
		a = a+"Sharma";
		
		a.concat("Chouhan");
		
		System.out.println(a);
		System.out.println(b);
		
		// because it may be happen that refernce of previous rakesh may be assign to some other variable
		
		
		char [] arr = {'a','y','u','s','h'};
		
		//String uuu = new String("ayush");
		
		String uuu = new String(arr);
		
		System.out.println(uuu);
		
		
		
	}



	}


